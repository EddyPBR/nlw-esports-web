{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "~components/*": [
        "./components/*"
      ],
      "~styles/*": [
        "./styles/*"
      ],
      "~pages/*": [
        "./pages/*"
      ],
      "~services/*": [
        "./services/*"
      ],
      "~utils/*": [
        "./utils/*"
      ],
      "~contexts/*": [
        "./contexts/*"
      ],
      "~hooks/*": [
        "./hooks/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
